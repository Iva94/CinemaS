@model CinemaApp.Models.Reservation

@{
    ViewBag.Title = "Otkazivanje rezervacije";
    Layout = null;
}

<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal">&times;</button>
        <h3>Otkazivanje rezervacije</h3>
    </div>
    <div class="modal-body">
        <h4>Da li ste sigurni da želite otkazati rezervaciju?</h4>
    </div>
    <div class="modal-footer">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger"> Otkaži </button>
            <button class="btn btn-default" data-dismiss="modal">Zatvori</button>
        }
    </div>
</div>



