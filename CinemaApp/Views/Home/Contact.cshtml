<script>
    function myMap() {
        var myCenter = new google.maps.LatLng(43.826130, 18.376120);
        var mapCanvas = document.getElementById("map");
        var mapOptions = { center: myCenter, zoom: 12 };
        var map = new google.maps.Map(mapCanvas, mapOptions);
        var marker = new google.maps.Marker({ position: myCenter });
        marker.setMap(map);
    }
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDN4iN5Hk7HuTL2mMYq3XqaPBzTLT_BwrA&callback=myMap" type="text/javascript"></script>